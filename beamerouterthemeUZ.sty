  \defbeamertemplate*{headline}{UZ theme}
  {%
  \leavevmode%
  \hbox{%
  	\begin{beamercolorbox}[wd=\paperwidth, ht=\beamer@headheight,dp=1ex]{palette quaternary} \ifx\beamer@sidebarside\beamer@lefttext%
     \else%
       \hfill%
     \fi%
       \vrule width0pt height \beamer@headheight 
	\end{beamercolorbox}
    }
  }


\defbeamertemplate*{footline}{UZ theme}
{%
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=\paperwidth,ht=10ex,dp=1ex,left]{author in head/foot}%
      \begin{tikzpicture}
  \useasboundingbox(0,0) rectangle(\the\paperwidth,1.2);
  \node[left, anchor = south west] (foota) at (0,0) {
  \hspace*{1em}\usebeamerfont{title in head/foot}\insertshorttitle}; 
    \node[left, anchor= south west] (footb) at (foota.north west) {\usebeamerfont{author in head/foot}\hspace*{1em}\insertshortauthor\expandafter\ifblank\expandafter{\beamer@shortinstitute}{}{~~(\insertshortinstitute)}};
    \node[left, anchor = south west] at (footb.north west)  { \hspace*{1em}\usebeamerfont{date in head/foot}\insertshortdate{} };
    


\node[right, anchor=south east] at (\the\paperwidth, 0){\UZ@footerlogo}; 

\end{tikzpicture}
  \end{beamercolorbox}%
  }
