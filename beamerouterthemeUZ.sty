  \defbeamertemplate*{frametitle}{UZ theme}
  {%
  \setbeamercolor*{frametitle}{bg=palette quaternary.bg, fg=palette quaternary.fg}
  %\setbeamercolor*{framesubtitle}{bg=palette secondary.bg, fg=palette tertiary.fg}
    \nointerlineskip%
    \vskip-\beamer@headheight%
    \vbox to \beamer@headheight{%
      \vfil
      \leftskip=-\beamer@leftmargin%
      \advance\leftskip by1.0cm%
      \rightskip=-\beamer@rightmargin%
      \advance\rightskip by1.0cm plus1fil%
      {\usebeamercolor[fg]{frametitle}
      \usebeamerfont{frametitle}\strut\insertframetitle}%
      \ifx\insertframesubtitle\@empty{\par} \else%
        {\usebeamercolor[fg]{palette secondary}\usebeamerfont{frametitle}\strut\insertframesubtitle}%
      
      \fi%
      \vbox{}%
      \vskip-1em%
     \vskip0pt
      \vfil
    }%
  }
